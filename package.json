{
  "name": "light-godwoken-workspaces",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "prepare": "husky install && lerna bootstrap",
    "build": "lerna run build --stream",
    "clean:apps": "rimraf apps/*/build && rimraf apps/*/dist",
    "clean:packages": "rimraf packages/*/dist && rimraf packages/*/coverage && rimraf packages/*/tsconfig.tsbuildinfo"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "@metamask/detect-provider": "^1.2.0",
    "@metamask/providers": "^8.1.1",
    "@polyjuice-provider/ethers": "^0.1.5",
    "ethers": "^5.6.5",
    "ethers-multicall": "^0.2.3",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^5.3.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1"
  }
}
